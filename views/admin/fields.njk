<div class="item">
    <div>Nome da receita</div>
    <input type="text" value="{{recipe.title}}" name="title" placeholder="Pizza 4 queijos">
</div>

<div class="item">
    <div>Cozinheiro</div>
    <input type="text" value="{{recipe.by}}" name="by" placeholder="Lucas Seguessi">
</div>

<div class="item">
    <div>Imagem da receita</div>
    <input type="url" value="{{recipe.image_url}}" name="image_url" placeholder="http://">
</div>

<div class="item" id="ingredients">
    <div>Ingredientes</div>
    {% for ingredient in recipe.ingredients %}
        <div class="ingredient">
            <input type="text" value="{{ingredient}}" name="ingredients[]" placeholder="Ingredientes">
        </div>
    {% endfor %}
</div>

<button type="button" class="add-ingredient">Adicionar ingrediente</button>

<div class="item" id="preparation">
    <div>Modo de preparo</div>
    <div class="preparation">
        {% if recipe.preparation != 0 %}
            {% for preparation in recipe.preparation %}
                <input type="text" value="{{preparation}}" name="preparation" placeholder="Modo de preparo">
            {% endfor %}
        {% endif %}
        <input type="text" value="" name="preparation[]" placeholder="Modo de preparo">
    </div>
</div>
<button type="button" class="add-preparation">Adicionar novo passo</button>

<div class="item">
    <div>Informações adicionais</div>
    <textarea cols="133" rows="12" wrap="hard" value="{{recipe.information}}" name="information" placeholder="Informações complementares da receita"></textarea>
</div>
{% extends "layout_admin.njk" %}
{% block content %}

    <main class="form-create">
        <form method="POST" action="/admin/recipes?_method=PUT">
            <div class="header-create">
                <h2>Editar Receita</h2>
                <div class="create-menu">
                    <button type="submit" class="delete" form="delete">Deletar</button>
                    <button type="submit">Salvar Receita</button>
                </div>
            </div>
            {% include 'admin/fields.njk' %}
            <input type="hidden" name="id" value="{{ recipe.id }}">
        </form>

        <form action="/admin/recipes?_method=DELETE" id="delete" method="POST">
            <input type="hidden" name="id" value="{{ recipe.id }}">
        </form>
    </main>
{% endblock %}
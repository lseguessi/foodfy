{% extends "layout.njk" %}
{% block content %}
    <div id="content">
        <section class="more-acess">
            <div class="card recipe">
                <div class="card" id="{{recipe.id}}">
                    <div class="card-img">
                        <img src="{{recipe.image_url}}" alt="Imagem de {{recipe.title}}">
                    </div>
                </div>
            </div>

            <div class="info-recipe">
                <h4>{{recipe.title}}</h4>
                <p class="by-name">por
                    {{recipe.by}}</p>
            </div>
        </section>
    </div>
    <div class="about-recipe">
        <div class="ingredients">
            <h3>Ingredientes <span class="showHide">Mostrar</span></h3>
                <ul class="list0 hide-show">
                    {% for ingredient in recipe.ingredients %}
                        <li>-{{ingredient}}</li>
                    {% endfor %}
                </ul>
        </div>
        <div class="preparation">
            <h3>Modo de preparo <span class="showHide">Mostrar</span></h3>
            <ul class="list1 hide-show">
                {% for ingredient in recipe.preparation %}
                    <li>-{{ingredient}}</li>
                {% endfor %}
            </ul>
        </div>
        <div class="history">
            <h3>Hist√≥ria do prato</h3>
            <p>{{recipe.information}}</p>
        </div>
    </div>
{% endblock %}